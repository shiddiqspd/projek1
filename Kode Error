<div class="card">
    <h3>Simulasi Tabungan</h3>
    <label>Saldo Awal (Rp):</label>
    <input type="number" id="inputSaldo" placeholder="Contoh: 1000000">
    
    <label>Bunga (Rp):</label>
    <input type="number" id="inputBunga" placeholder="Contoh: 50000">
    
    <button id="btnHitung">Hitung Total</button>

    <div id="boxHasil">
        Total Tabungan Anda: <span id="textTotal">0</span>
    </div>
</div>

<script>
    // --- AREA ERROR UNTUK DIPERBAIKI SISWA ---

    document.getElementById("btn-hitung").addEventListener("click", function() {
        // Error 1: ID di atas tidak cocok dengan ID di HTML
        
        let saldo = document.getElementById("inputSaldo").value;
        let bunga = document.getElementById("inputBunga").value;

        // Error 2: Secara default, nilai dari input adalah STRING. 
        // Jika saldo 1000 dan bunga 500, hasilnya malah jadi 1000500.
        let total = saldo + bunga; 

        // Menampilkan hasil
        document.getElementById("boxHasil").style.display = "block";
        document.getElementById("textTotal").innerText = total;
    });

    // --- SELESAI AREA ERROR ---
</script>

